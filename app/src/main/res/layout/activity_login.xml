<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30243C"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/toyzericons" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#11081D"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Giriş"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="kullanıcı Adınızı:"
                android:textColor="#A5AACA" />

            <EditText
                android:id="@+id/login_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_btn_giris"
                android:drawableLeft="@drawable/ic_baseline_person_pin_24"
                android:drawablePadding="8dp"
                android:hint="Kullanıcı adı"
                android:padding="8dp"
                android:textColor="@color/color_white"
                android:textColorHint="#A5AACA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="şifreniz:"
                android:textColor="#A5AACA" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_btn_giris"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="şifre"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/color_white"
                android:textColorHint="#A5AACA" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Beni Hatırla CheckBox -->
                <CheckBox
                    android:id="@+id/checkboxRememberMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:text="Beni Hatırla"
                    android:textColor="#A5AACA" />

                <TextView
                    android:id="@+id/sifre_unuttum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="Şifrem'i Unuttum!"
                    android:textColor="#FF9100"
                    android:textSize="12sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/color_light_primary"
                android:text="Giriş"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/signupRedirectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="Henüz kayıtlı değil misiniz? Üye ol"
                android:textColor="@color/color_light_primary"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="ــــــــــــــــــــــــــــــــــــ      veya     ــــــــــــــــــــــــــــــــــــ"
                android:textColor="#A5AACA" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/googleilegir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_only_stroks"
                        android:backgroundTint="#30243C"
                        android:drawableStart="@drawable/googlelogo"
                        android:drawablePadding="10dp"
                        android:padding="12dp"
                        android:text="Google"
                        android:textColor="@color/color_white"
                        android:textSize="13sp">

                    </TextView>

                    <TextView
                        android:id="@+id/faceilegir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_only_stroks"
                        android:backgroundTint="#30243C"
                        android:drawableStart="@drawable/facebooklogo"
                        android:drawablePadding="10dp"
                        android:padding="12dp"
                        android:text="Facebook"
                        android:textColor="@color/color_white"
                        android:textSize="13sp">

                    </TextView>

                </LinearLayout>


                <Button
                    android:id="@+id/girisiatla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#1976D2"
                    android:text="MİSAFİR Olarak devam et  >">

                </Button>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>