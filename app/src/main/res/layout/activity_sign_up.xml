<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30243C"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:layout_gravity="top"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/toyzericons" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-15dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#11081D"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Üye ol"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Kullanıcı Adınızı:"
                android:textColor="#A5AACA" />

            <EditText
                android:id="@+id/signup_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/shape_btn_giris"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:hint="adı Soyadı"
                android:padding="8dp"
                android:textColor="@color/color_white"
                android:textColorHint="#A5AACA" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Email:"
                android:textColor="#A5AACA" />
            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_btn_giris"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:padding="8dp"
                android:textColor="@color/color_white"
                android:textColorHint="#A5AACA" />

            <TextView
                android:layout_marginBottom="2dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Kullanıcı Adı:"
                android:textColor="#A5AACA" />


            <EditText
                android:id="@+id/signup_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_btn_giris"
                android:drawableLeft="@drawable/ic_baseline_person_pin_24"
                android:drawablePadding="10dp"
                android:hint="Kullanıcı Adı"
                android:padding="8dp"
                android:textColor="@color/color_white"
                android:textColorHint="#A5AACA" />


            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Şifre:"
                android:textColor="#A5AACA" />
            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_btn_giris"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:hint="Şifre"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/color_white"
                android:textColorHint="#A5AACA" />

            <Button
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/color_blue"
                android:text="Üye ol"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <TextView

                android:id="@+id/loginRedirectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="Zaten kullanıcı mısınız? Giriş yap"
                android:textColor="@color/color_cyan"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>